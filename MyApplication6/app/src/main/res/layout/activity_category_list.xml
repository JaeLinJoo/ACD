<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView70"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="#FDD835"
                    android:gravity="center_vertical"
                    android:text="   카테고리별 소모임"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/category"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:text="TextView"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#1E1D1D"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FC505050" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#FFEBEE"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/binggraemelona"
                    android:text="   모집중인 소모임"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/binggraemelona"
                    android:text="    함께 하자. 함께 받자. 함께 도전해보세요!"
                    android:textColor="#FB484848"
                    android:textSize="15dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/list1"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:layout_margin="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FC505050" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:background="#E3F2FD"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/진행중인소모임"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="   진행중인 소모임"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="     아주 잘 하고있는지 확인해주세요!"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#FB484848"
                    android:textSize="15dp" />
            </LinearLayout>

            <ListView
                android:id="@+id/list2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>