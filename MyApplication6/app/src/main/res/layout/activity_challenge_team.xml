<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FDD835"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView49"
            android:layout_width="7dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            app:fontFamily="@font/binggraemelona"
            android:gravity="center_vertical"
            android:text="진행중/"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

        <TextView
            android:id="@+id/teamname"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            app:fontFamily="@font/binggraemelona"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView56"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:fontFamily="@font/binggraemelona"
                android:text="멤버 수" />

            <TextView
                android:id="@+id/member_count"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                app:fontFamily="@font/binggraemelona"
                android:text="Text View" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:text="TextView"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#1E1D1D"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/category2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    app:fontFamily="@font/binggraemelona"
                    android:background="@drawable/button_border2"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#1E1D1D"
                    android:textSize="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--소모임 이름-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teamname1"
                            android:layout_width="253dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            app:fontFamily="@font/binggraemelona"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!--소모임 기간-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/period"
                            android:layout_width="319dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            app:fontFamily="@font/binggraemelona"
                            android:textColor="#3A3A3A"
                            android:textSize="15dp" />
                    </LinearLayout>
                    <!--소모임 만남시간-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="312dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#3A3A3A"
                            app:fontFamily="@font/binggraemelona"
                            android:textSize="15dp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FCD5D4D4" />

            <!--소모임소개-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_style"
                    android:gravity="center"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000"
                    android:text="소모임 소개" />

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_style"
                    android:gravity="center"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000"
                    android:text="대목표" />

                <TextView
                    android:id="@+id/obj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_style"
                    android:gravity="center"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000"
                    android:text="소목표" />

                <ListView
                    android:id="@+id/objlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/textview_style"
                    android:gravity="center"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000"
                    android:text="인증방식" />

                <TextView
                    android:id="@+id/admit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/textview_style"
                    android:gravity="center"
                    android:text="갤러리"
                    app:fontFamily="@font/binggraemelona"
                    android:textColor="#000000" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <!-- 리스트뷰로 바꾸기!!! -->
                    <TextView
                        android:id="@+id/textView_admitImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#C5CAE9"
                        android:gravity="center"
                        app:fontFamily="@font/binggraemelona"
                        android:text="인증사진 리스트"
                        android:textColor="#3A3A3A" />

                    <ListView
                        android:id="@+id/listView_admit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/list3"
                        android:layout_below="@+id/textView_admitImg"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"></ListView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:orientation="vertical">

                    <!-- 리스트뷰로 바꾸기!!! -->
                    <TextView
                        android:id="@+id/textView_attendImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#FFCDD2"
                        android:gravity="center"
                        android:text="출석사진 리스트"
                        app:fontFamily="@font/binggraemelona"
                        android:textColor="#3A3A3A" />

                    <ListView
                        android:id="@+id/listView_attend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView_admitImg"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"></ListView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>