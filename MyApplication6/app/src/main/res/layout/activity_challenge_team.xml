<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FDD835"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ret"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#00ff0000"
            android:gravity="center|center_vertical"
            android:text="＜"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:gravity="center_vertical"
            android:text="진행중/"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/binggraemelona" />

        <TextView
            android:id="@+id/teamname"
            android:layout_width="113dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            app:fontFamily="@font/binggraemelona" />


    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/category1"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#1E1D1D"
                    android:textSize="17sp"
                    app:fontFamily="@font/binggraemelona" />

                <TextView
                    android:id="@+id/category2"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_border2"
                    android:gravity="center"
                    android:text="TextView"
                    android:textColor="#1E1D1D"
                    android:textSize="17sp"
                    app:fontFamily="@font/binggraemelona" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCE0DEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <!--소모임 이름-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="37dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/teamname1"
                            android:layout_width="253dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#000000"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            app:fontFamily="@font/binggraemelona" />
                    </LinearLayout>

                    <!--소모임 기간-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/period"
                            android:layout_width="319dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#3A3A3A"
                            android:textSize="15dp"
                            app:fontFamily="@font/binggraemelona" />
                    </LinearLayout>
                    <!--소모임 만남시간-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="312dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#3A3A3A"
                            android:textSize="15dp"
                            app:fontFamily="@font/binggraemelona" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="17dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_marginRight="3dp"
                            app:srcCompat="@drawable/count" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="멤버 수"
                            android:textSize="13sp"
                            app:fontFamily="@font/binggraemelona" />

                        <TextView
                            android:id="@+id/member_count"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="TextView"
                            android:textColor="#5C5B5B"
                            android:textSize="13sp"
                            app:fontFamily="@font/binggraemelona" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="#FCE0DEDE" />

            <!--소모임소개-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView34"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="소모임 소개"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggraemelona" />

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp"
                    app:fontFamily="@font/binggraemelona" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCE0DEDE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView38"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="소모임 목표"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggraemelona" />

                <TextView
                    android:id="@+id/obj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp"
                    app:fontFamily="@font/binggraemelona" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView39"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="소목표"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggraemelona" />

                <ListView
                    android:id="@+id/objlist"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:divider="#f0f0f0"
                    android:dividerHeight="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView41"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="인증방식"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggraemelona" />

                <TextView
                    android:id="@+id/admit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="TextView"
                    android:textColor="#3A3A3A"
                    android:textSize="15dp"
                    app:fontFamily="@font/binggraemelona" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#FCD5D4D4" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView55"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="갤러리"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    app:fontFamily="@font/binggraemelona" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="7dp"
                    android:layout_weight="1"
                    android:text="위에 인증방식과 밑에 인증 리스트들과 비교하여 잘못된 경우 신고해주세요!"
                    android:textColor="#FC757373"
                    android:textSize="10sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:background="#54EDE7F6"
                    android:orientation="vertical">

                    <!-- 리스트뷰로 바꾸기!!! -->
                    <TextView
                        android:id="@+id/textView_admitImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#9575CD"
                        android:gravity="center"
                        android:text="인증사진 리스트"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggraemelona" />

                    <ListView
                        android:id="@+id/listView_admit"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_above="@+id/list3"
                        android:layout_below="@+id/textView_admitImg"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"></ListView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/list3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_marginTop="5dp"
                    android:background="#52FFEBEE"
                    android:orientation="vertical">

                    <!-- 리스트뷰로 바꾸기!!! -->
                    <TextView
                        android:id="@+id/textView_attendImg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F48FB1"
                        android:gravity="center"
                        android:text="출석사진 리스트"
                        android:textColor="#ffffff"
                        android:textStyle="bold"
                        app:fontFamily="@font/binggraemelona" />

                    <ListView
                        android:id="@+id/listView_attend"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@+id/textView_admitImg"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentLeft="true"
                        android:layout_margin="5dp"></ListView>

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>