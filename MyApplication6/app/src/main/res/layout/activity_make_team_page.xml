<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FDD835"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView21"
            android:layout_width="206dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="   챌린지 소모임 신청하기"
            app:fontFamily="@font/binggraemelona"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:fillViewport="true"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layout_g"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/post"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    app:fontFamily="@font/binggraemelona"
                    android:text="가져오기" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    tools:srcCompat="@tools:sample/avatars" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layout_g"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="  카테고리"
                    app:fontFamily="@font/binggraemelona"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    app:fontFamily="@font/binggraemelona"
                    android:layout_weight="0.21" />

                <Spinner
                    android:id="@+id/spinner2"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    app:fontFamily="@font/binggraemelona"
                    android:layout_weight="0.21" />

                <Button
                    android:id="@+id/btn_refresh"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.21"
                    app:fontFamily="@font/binggraemelona"
                    android:text="설정" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/layout_g"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:text="  소모임 이름"
                    app:fontFamily="@font/binggraemelona"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText_name"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    app:fontFamily="@font/binggraemelona"
                    android:inputType="textPersonName" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/layout_g"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text="  인원"
                    app:fontFamily="@font/binggraemelona"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/spinner_count"
                    android:layout_width="100dp"
                    app:fontFamily="@font/binggraemelona"
                    android:layout_height="40dp"
                    android:layout_weight="0.21" />

                <TextView
                    android:id="@+id/textView32"
                    android:layout_width="30dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="챌린지 캔:"
                    app:fontFamily="@font/binggraemelona"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="141dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    app:fontFamily="@font/binggraemelona"
                    android:inputType="numberDecimal" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        app:fontFamily="@font/binggraemelona"
                        android:text="  소모임 기간"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/listView"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <LinearLayout
                        android:layout_width="213dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp">

                        <Button
                            android:id="@+id/button_period_start"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:onClick="OnClickHandler_start"
                            app:fontFamily="@font/binggraemelona"
                            android:text="시작일" />

                        <TextView
                            android:id="@+id/textView_startDate"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            app:fontFamily="@font/binggraemelona"
                            android:text="YYYY.MM.DD"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        tools:layout_editor_absoluteX="8dp"
                        tools:layout_editor_absoluteY="8dp">

                        <Button
                            android:id="@+id/button_period_finish"
                            android:layout_width="100dp"
                            android:layout_height="40dp"
                            android:onClick="OnClickHandler_finish"
                            app:fontFamily="@font/binggraemelona"
                            android:text="마감일" />

                        <TextView
                            android:id="@+id/textView_finishDate"
                            android:layout_width="200dp"
                            android:layout_height="40dp"
                            android:gravity="center"
                            android:text="YYYY.MM.DD"
                            app:fontFamily="@font/binggraemelona"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="138dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="40dp"
                        android:text="  소모임 목표"
                        app:fontFamily="@font/binggraemelona"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/editText_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_weight="1"
                        android:ems="10"
                        app:fontFamily="@font/binggraemelona"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:text="  소모임 중간목표(상세목표)"
                        app:fontFamily="@font/binggraemelona"
                        android:textSize="20sp" />

                    <Button
                        android:id="@+id/add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:fontFamily="@font/binggraemelona"
                        android:text="추가" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ListView
                        android:id="@+id/listv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:text="  인증방식"
                        app:fontFamily="@font/binggraemelona"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="137dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/editText_인증"
                        app:fontFamily="@font/binggraemelona"
                        android:layout_width="wrap_content"
                        android:layout_height="122dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@drawable/layout_g"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        app:fontFamily="@font/binggraemelona"
                        android:text="  멘토 필요여부"
                        android:textSize="20sp" />

                    <RadioGroup
                        android:id="@+id/radioGroup_mento"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <RadioButton
                            android:id="@+id/radioButton_mento_yes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:fontFamily="@font/binggraemelona"
                            android:layout_weight="1"
                            android:text="필요" />

                        <RadioButton
                            android:id="@+id/radioButton_mento_no"
                            android:layout_width="wrap_content"
                            app:fontFamily="@font/binggraemelona"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="불필요" />
                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="69dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:text="  멘토 지원비 (1인당)"
                        app:fontFamily="@font/binggraemelona"
                        android:textSize="20sp" />

                    <EditText
                        android:id="@+id/editText_mento_pay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ems="10"
                        app:fontFamily="@font/binggraemelona"
                        android:inputType="numberDecimal" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="107dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="400dp"
                        android:layout_height="40dp"
                        app:fontFamily="@font/binggraemelona"
                        android:text="  모임가능시간 (요일, 시간대)"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/editText_모임시간"
                        app:fontFamily="@font/binggraemelona"
                        android:layout_width="wrap_content"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="179dp"
                android:background="@drawable/layout_g"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        app:fontFamily="@font/binggraemelona"
                        android:text="  소모임 소개 (공지)"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <EditText
                        android:id="@+id/editText_intro"
                        android:layout_width="wrap_content"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:ems="10"
                        app:fontFamily="@font/binggraemelona"
                        android:gravity="start|top"
                        android:inputType="textMultiLine" />

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/button_신청"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="1"
                    android:background="#4DB6AC"
                    android:text="신청하기"
                    android:textColor="#FFFFFF"
                    android:textSize="25dp"
                    app:fontFamily="@font/binggraemelona" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>

